_G.EquipLoop = false

Killer:AddSwitch("Equip / Unequip Punch", function(state)
    _G.EquipLoop = state

    local Players = game:GetService("Players")
    local RunService = game:GetService("RunService")
    local LP = Players.LocalPlayer

    task.spawn(function()
        while _G.EquipLoop do
            local char = LP.Character
            local bp = LP:FindFirstChild("Backpack")

            if char and bp then
                -- üîß Cambia "Punch" si tu tool tiene otro nombre
                local tool = char:FindFirstChild("Punch")
                    or bp:FindFirstChild("Punch")

                if tool then
                    -- Desequipar
                    tool.Parent = bp
                    task.wait(0.01)

                    -- Equipar
                    tool.Parent = char
                end
            end

            RunService.Heartbeat:Wait()
        end
    end)
end)

_G.PunchEnabled = true

Killer:AddSwitch("Enable Punch", function(state)
    _G.PunchEnabled = state

    local Players = game:GetService("Players")
    local LP = Players.LocalPlayer

    local char = LP.Character
    local bp = LP:FindFirstChild("Backpack")

    if not char or not bp then return end

    -- üîß Cambia "Punch" si tu tool tiene otro nombre
    local tool = char:FindFirstChild("Punch") or bp:FindFirstChild("Punch")
    if not tool then return end

    if _G.PunchEnabled then
        -- ACTIVAR (equipar)
        tool.Parent = char
    else
        -- DESACTIVAR (desequipar)
        tool.Parent = bp
    end
end)

